// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/alpine
{
	"name": "Alpine",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:alpine-3.20",
	"features": {
		"ghcr.io/wxw-matt/devcontainer-features/script_runner:0": {},
		"ghcr.io/dotnet/aspire-devcontainer-feature/dotnetaspire:1": {}
	},
	"forwardPorts": [5173],
	"postCreateCommand": "sudo apt-get update && sudo apt-get install -y lua5.4 git && git config core.hooksPath .githooks && chmod +x .githooks/pre-commit",
	"postStartCommand": "chmod +x ./setup-hooks.sh && ./setup-hooks.sh",
	"customizations": {
		"vscode": {
			"extensions": [
				"sumneko.lua",
				"trixnz.vscode-lua"
			]
		}
	}

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "uname -a",

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
